# GitLab logrotate settings
# based on: http://stackoverflow.com/a/4883967

<%= @gitlab_path %>/log/*.log {
    daily
    missingok
    rotate 90
    compress
    notifempty
    copytruncate
}

<%= @gitlab_shell_path %>/gitlab-shell.log {
    daily
    missingok
    rotate 90
    compress
    notifempty
    copytruncate
}
